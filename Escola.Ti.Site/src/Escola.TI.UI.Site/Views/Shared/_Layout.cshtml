<html>
    <head>
        <title>@ViewData["Title"] - Escola para TI</title>

    </head>

    <body>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="nav-brand" asp-area="" asp-controller="Home" asp-action="Index">Escola para TI</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="navbar-collapse"
                        aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row=reverse">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" aso-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" aso-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>

        <div class="container">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>       

        <footer class="border-top footer text-muted">
            <div class="container">
                &copy;2020 - Escola para TI - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacidade</a> 
            </div>
            
        </footer>
        
    </body>
  

</html>